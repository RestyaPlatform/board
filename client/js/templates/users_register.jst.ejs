<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 col-lg-offset-4 col-md-offset-4 col-sm-offset-3">
<div class="panel panel-default">
  <div class="panel-heading lead"><%- i18next.t("Register") %></div>
  <div class="panel-body well-lg">
	<form id="UserRegisterForm" name="UserRegisterForm" class="form-horizontal col-xs-12">
	  <div class="form-group required">
		<label class="sr-only control-label" for="inputEmail"><%- i18next.t("Email") %></label>
		<input type="email" required name="email" id="inputEmail" class="form-control" placeholder="<%- i18next.t('Email') %>" title="<%- i18next.t('Email') %>">
	  </div>
	  <div class="form-group required">
		<label class="sr-only control-label" for="inputUsername"><%- i18next.t("Username") %></label>
		<input type="name" name="username" id="inputUsername" class="form-control" placeholder="<%- i18next.t('Username') %>" required pattern="^[a-zA-Z0-9_]{2,90}$" title="<%- i18next.t('Username. Minimum 3 characters and Maximum 90 characters and spaces not allowed') %>">
	  </div>
	  <div class="form-group required">
		<label class="sr-only control-label" for="inputPassword"><%- i18next.t("Password") %></label>
		<input type="password" required name="password" id="inputPassword"class="form-control" placeholder="<%- i18next.t('Password') %>" pattern="[A-Za-z0-9\S]{6,50}" title="<%- i18next.t('Password. Minimum 6 characters, Maximum 256 characters and white space not allowed') %>" autocomplete="off">
	  </div>
	  <div class="form-group">
		<label class="sr-only ontrol-label" for="submitRegister"><%- i18next.t("Join Now") %></label>
		<input type="submit" class="btn btn-primary col-xs-12" id="submitRegister" value="<%- i18next.t('Join Now') %>">
	  </div>
	  <ul class="list-inline small text-center">
		  <% if(!_.isEmpty(role_links.where({slug: "users_forgotpassword"}))){ %>
		  	<li><a href="#/users/forgotpassword" title="<%- i18next.t('Forgot your password') %>?" class="text-primary"><%- i18next.t("Forgot your password") %>?</a></li>
			<% }%>
	  </ul>
	  <% if (!_.isUndefined(APPS) && APPS !== null && !_.isUndefined(APPS.enabled_apps) && APPS.enabled_apps !== null && $.inArray('r_saml_shibboleth_sso',APPS.enabled_apps) !== -1 && R_SAML_ENTITY_NAME !== null && R_SAML_ENTITY_NAME !== '') {%>
		<div class="form-group">
			<a class="btn btn-primary htruncate col-xs-12" href="saml?sso"><%= i18next.t("Login with %s", { postProcess: 'sprintf', sprintf: [R_SAML_ENTITY_NAME] }) %></a>
		</div>
	  <% } %>
	</form>
  </div>
</div>
</div>