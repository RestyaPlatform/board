<div class="clearfix text-center col-xs-12">
<% var currenturl = window.location;
var currentss = currenturl.hash;
var get_match_url = currentss.split("/");
if ((!_.isUndefined(get_match_url['1']) && get_match_url['1'] == 'board' && ((!_.isUndefined(get_match_url['3']) && get_match_url['3'] == 'card') || (!_.isUndefined(get_match_url['3']) && get_match_url['3'] == 'list'))) || (!_.isUndefined(get_match_url['1']) && !_.isUndefined(get_match_url['3']) && get_match_url['1'] === 'user' && get_match_url['3'] === 'cards') || (!_.isUndefined(get_match_url['1']) && get_match_url['1'] == 'search')) {
		var cols = 'form-group';
} else { %>
	<a class="js-back-to-card-actions pull-left" href="#"><i class="icon-caret-left"></i></a>
<%	var cols = ''; 
} %>
	<span class="col-xs-10">
		<strong> <%- i18next.t('Labels') %></strong>
	</span>
	<a class="js-close-popover pull-right" href="#">
		<i class="icon-remove"></i>
	</a>
</div>
<div class="col-xs-12 divider"></div>
<div class="col-xs-12">
	<form name="cardLabelAddForm" class="js-card-label-add-form">
		<div class="<%- cols %>">
			<input type="text" class="inputCardLabel" name="name" value="<%-labels %>" />
		</div>
<% var currenturl = window.location;
var currentss = currenturl.hash;
var get_match_url = currentss.split("/");
if ((!_.isUndefined(get_match_url['1']) && get_match_url['1'] == 'board' && ((!_.isUndefined(get_match_url['3']) && get_match_url['3'] == 'card') || (!_.isUndefined(get_match_url['3']) && get_match_url['3'] == 'list'))) || (!_.isUndefined(get_match_url['1']) && !_.isUndefined(get_match_url['3']) && get_match_url['1'] === 'user' && get_match_url['3'] === 'cards') || (!_.isUndefined(get_match_url['1']) && get_match_url['1'] == 'search')) { %>
		<div class="submit">
			<input type="submit" value="<%- i18next.t('Save') %>" class="btn btn-primary pull-left">
		</div>
<% } %>
	</form>
</div>