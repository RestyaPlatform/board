<div class="form-group required clearfix">
	<label for="inputItemName" class="sr-only"> <%- i18next.t('Name') %>
</label>
	<div class="clearfix">
		<textarea name="name" id="ChecklistItem" class="form-control checklist-item js-new-checklist-item-<%-checklist.id %>" required></textarea>
	</div>
</div>
<div class="form-group">
	<div class="col-xs-12 h4 btn-block clearfix">
		<ul class="clearfix list-unstyled">
			<li class="pull-left">
				<div class="submit">
					<input type="submit" name="Save" class="btn btn-primary" value="<%- i18next.t('Add') %>">
				</div>
			</li>
			<li class="pull-left">
				<i class="icon-remove js-hide-checklist-item-add-form btn btn-link cur show" title="<%- i18next.t('Cancel') %>"></i>
			</li>
			<li class="dropdown navbar-right pull-right">
				<a title="<%- i18next.t('Item Options') %>" class="dropdown-toggle js-show-item-options btn btn-link btn-sm" data-toggle="dropdown" href="#"><i class="icon-chevron-sign-down"></i></a>
				<ul class="dropdown-menu dropdown-menu-left arrow  js-dropdown-popup dropdown-popup pre-scrollable vertical-scrollbar" id="js-item-add-option-response-<%-checklist.id %>">
				</ul>
			</li>
		</ul>
	</div>
</div>